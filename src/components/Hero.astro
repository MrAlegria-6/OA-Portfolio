<style>
    .hero {
        min-height: 120vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 6rem 2rem 4rem;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .hero-content {
        max-width: 700px;
        animation: fadeIn 1s ease-in;
        position: relative;
        z-index: 1;
    }

    .avatar {
        width: 180px;
        height: 180px;
        margin: 0 auto 0.2%;
        border-radius: 50%;
        overflow: hidden;
        border: 4px solid whitesmoke;
        box-shadow: 0 0 30px #383838;
    }

    .avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .hero-title {
        font-size: 60px;
        font-weight: 700;
        margin-bottom: 0.2%;
        background: #262525;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .hero-subtitle {
        font-size: 65px;
        background: linear-gradient(135deg, #fbbf24 0%, #d97706 100%);
        background-size: 200% 200%;
        animation: moveGradient 6s ease-in-out infinite;
        margin-bottom: 2rem;
        font-weight: 300;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .hero-description {
        font-size: 1.1rem;
        line-height: 1.8;
        color: #262525;;
        margin-bottom: 3rem;
    }

    .social-links {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
    }

    .social-link {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: whitesmoke;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #282828;
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);;
    }

    .social-link:hover {
        background: linear-gradient(135deg, #fbbf24 0%, #d97706 100%);
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(74, 158, 255, 0.3);
        color: whitesmoke;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes moveGradient {
        0% {
            background-position: 50% 50%;
        }
        25% {
            background-position: 25% 25%;
        }
        50% {
            background-position: 0% 100%;
        }
        100% {
            background-position: 50% 50%;
        }
    }

    @media (max-width: 768px) {
        .hero-title {
            font-size: 2rem;
        }

        .hero-subtitle {
            font-size: 1.2rem;
        }

        .hero-description {
            font-size: 1rem;
        }

        .avatar {
            width: 150px;
            height: 150px;
        }
    }
</style>
