---

const navItems = [
  { label: "About Me", href: "#sobre-mi" },
  { label: "Education", href: "#education" },
  { label: "Proyects", href: "#proyects" },
  { label: "Contact", href: "#contact" },
  { label: "CV", href: "#cv" },

];

import "@fontsource/k2d";
---

<header class="header">
  <nav class="nav">
    <ul class="nav-list">
      {
        navItems.map((item) => (
          <li class="nav-item">
            <a href={item.href} class="nav-link">
              {item.label}
            </a>
          </li>
        ))
      }
    </ul>

    <div class="nav-controls">
      <!-- Switch de idioma -->
      <label class="lang-switch">
        <input type="checkbox" class="lang-switch__checkbox" />
        <div class="lang-switch__container">
          <div class="lang-switch__slider">
            <span class="lang-switch__text lang-switch__text--en">EN</span>
            <span class="lang-switch__text lang-switch__text--es">ES</span>
          </div>
        </div>
      </label>

      <!-- Switch de modo oscuro -->
      <label class="theme-switch">
        <input type="checkbox" class="theme-switch__checkbox" />
        <div class="theme-switch__container">
          <div class="theme-switch__clouds"></div>
          <div class="theme-switch__stars-container">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 144 55"
              fill="none"
            >
              <path
                fill-rule="evenodd"
                clip-rule="evenodd"
                d="M135.831 3.00688C135.055 3.85027 134.111 4.29946 133 4.35447C134.111 4.40947 135.055 4.85867 135.831 5.71123C136.607 6.55462 136.996 7.56303 136.996 8.72727C136.996 7.95722 137.172 7.25134 137.525 6.59129C137.886 5.93124 138.372 5.39954 138.98 5.00535C139.598 4.60199 140.268 4.39114 141 4.35447C139.88 4.2903 138.936 3.85027 138.16 3.00688C137.384 2.16348 136.996 1.16425 136.996 0C136.996 1.16425 136.607 2.16348 135.831 3.00688ZM31 23.3545C32.1114 23.2995 33.0551 22.8503 33.8313 22.0069C34.6075 21.1635 34.9956 20.1642 34.9956 19C34.9956 20.1642 35.3837 21.1635 36.1599 22.0069C36.9361 22.8503 37.8798 23.2903 39 23.3545C38.2679 23.3911 37.5976 23.602 36.9802 24.0053C36.3716 24.3995 35.8864 24.9312 35.5248 25.5913C35.172 26.2513 34.9956 26.9572 34.9956 27.7273C34.9956 26.563 34.6075 25.5546 33.8313 24.7112C33.0551 23.8587 32.1114 23.4095 31 23.3545ZM0 36.3545C1.11136 36.2995 2.05513 35.8503 2.83131 35.0069C3.6075 34.1635 3.99559 33.1642 3.99559 32C3.99559 33.1642 4.38368 34.1635 5.15987 35.0069C5.93605 35.8503 6.87982 36.2903 8 36.3545C7.26792 36.3911 6.59757 36.602 5.98015 37.0053C5.37155 37.3995 4.88644 37.9312 4.52481 38.5913C4.172 39.2513 3.99559 39.9572 3.99559 40.7273C3.99559 39.563 3.6075 38.5546 2.83131 37.7112C2.05513 36.8587 1.11136 36.4095 0 36.3545Z"
                fill="currentColor"></path>
            </svg>
          </div>
          <div class="theme-switch__circle-container">
            <div class="theme-switch__sun-moon-container">
              <div class="theme-switch__moon">
                <div class="theme-switch__spot"></div>
                <div class="theme-switch__spot"></div>
                <div class="theme-switch__spot"></div>
              </div>
            </div>
          </div>
        </div>
      </label>
    </div>
  </nav>

  <style>
    /* Header base */
    .header {
      background: whitesmoke;
      backdrop-filter: blur(10px);
      padding: 1.5rem 2rem;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      z-index: 1000;
      border-bottom: 1px solid rgba(0, 0, 0, 0.1);
      font-family: "K2D", sans-serif;
    }

    .nav {
      max-width: 1200px;
      margin: 0 auto;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .nav-list {
      display: flex;
      gap: 3rem;
      list-style: none;
    }

    .nav-item {
      position: relative;
    }

    .nav-link {
      color: #262525;
      text-decoration: none;
      font-size: 1rem;
      font-weight: 500;
      transition: color 0.3s ease;
      padding: 0.5rem 0;
    }

    .nav-link:hover {
      background: linear-gradient(135deg, #fbbf24 0%, #d97706 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent; /* Makes the text show the gradient */
      background-clip: text; /* For non-WebKit browsers */
      color: transparent; /* Fallback */
    }

    .nav-link::after {
      content: "";
      position: absolute;
      bottom: 0;
      left: 0;
      width: 0;
      height: 2px;
      background: linear-gradient(135deg, #fbbf24 0%, #d97706 100%);
      transition: width 0.3s ease;
    }

    .nav-link:hover::after {
      width: 100%;
    }

    /* Nav Controls Container */
    .nav-controls {
      display: flex;
      align-items: center;
      gap: 1.5rem;
    }

    /* Language Switch */
    .lang-switch {
      --lang-toggle-width: 4.5em;
      --lang-toggle-height: 2.2em;
      --lang-toggle-radius: 6.25em;
      --lang-bg-light: #4a90e2;
      --lang-bg-dark: #2c3e50;
      --lang-slider-size: 1.8em;
      --lang-text-color: #fff;
      --lang-transition: 0.4s cubic-bezier(0.4, 0, 0.2, 1);

      display: flex;
      align-items: center;
      cursor: pointer;
      transition: transform 0.2s ease;
    }

    .lang-switch:hover {
      transform: scale(1.05);
    }

    .lang-switch__checkbox {
      display: none;
    }

    .lang-switch__container {
      width: var(--lang-toggle-width);
      height: var(--lang-toggle-height);
      background: linear-gradient(135deg, #fbbf24 0%, #d97706 100%);
      border-radius: var(--lang-toggle-radius);
      position: relative;
      box-shadow:
        0 0.125em 0.25em rgba(0, 0, 0, 0.3),
        inset 0 0.062em 0.125em rgba(255, 255, 255, 0.2);
      transition: var(--lang-transition);
      overflow: hidden;
    }

    .lang-switch__slider {
      position: absolute;
      width: var(--lang-slider-size);
      height: var(--lang-slider-size);
      background: #262525;
      border-radius: 50%;
      top: 50%;
      left: 0.2em;
      transform: translateY(-50%);
      box-shadow:
        0 0.125em 0.375em rgba(0, 0, 0, 0.3),
        inset 0 0.062em 0.125em rgba(255, 255, 255, 0.5);
      transition: var(--lang-transition);
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 2;
    }

    .lang-switch__text {
      position: absolute;
      font-size: 0.75em;
      font-weight: 700;
      color: var(--lang-text-color);
      transition: var(--lang-transition);
      pointer-events: none;
      text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
    }

    .lang-switch__text--es {
      left: 0.6em;
      opacity: 0;
    }

    .lang-switch__text--en {
      right: 0.6em;
      opacity: 1;
    }

    /* Switch actions */
    .lang-switch__checkbox:checked + .lang-switch__container {
      background: linear-gradient(135deg, #d97706 0%, #fbbf24 100%);
    }

    .lang-switch__checkbox:checked
      + .lang-switch__container
      .lang-switch__slider {
      left: calc(100% - var(--lang-slider-size) - 0.2em);
    }

    .lang-switch__checkbox:checked
      + .lang-switch__container
      .lang-switch__text--es {
      opacity: 1;
    }

    .lang-switch__checkbox:checked
      + .lang-switch__container
      .lang-switch__text--en {
      opacity: 0;
    }

    /* Theme Switch */
    .theme-switch {
      --toggle-size: 30px;
      --container-width: 5.625em;
      --container-height: 2.5em;
      --container-radius: 6.25em;
      --container-light-bg: #3d7eae;
      --container-night-bg: #1d1f2c;
      --circle-container-diameter: 3.375em;
      --sun-moon-diameter: 2.125em;
      --sun-bg: #ecca2f;
      --moon-bg: #c4c9d1;
      --spot-color: #959db1;
      --circle-container-offset: calc(
        (var(--circle-container-diameter) - var(--container-height)) / 2 * -1
      );
      --stars-color: #fff;
      --clouds-color: #f3fdff;
      --back-clouds-color: #aacadf;
      --transition: 0.5s cubic-bezier(0, -0.02, 0.4, 1.25);
      --circle-transition: 0.3s cubic-bezier(0, -0.02, 0.35, 1.17);

      display: flex;
      align-items: center;
      cursor: pointer;
      transition: transform 0.2s ease;
    }

    .theme-switch:hover {
      transform: scale(1.1);
    }

    .theme-switch__checkbox {
      display: none;
    }

    .theme-switch__container {
      width: var(--container-width);
      height: var(--container-height);
      background-color: var(--container-light-bg);
      border-radius: var(--container-radius);
      overflow: hidden;
      position: relative;
      box-shadow:
        0em -0.062em 0.062em rgba(0, 0, 0, 0.25),
        0em 0.062em 0.125em rgba(255, 255, 255, 0.94);
      transition: var(--transition);
    }

    .theme-switch__circle-container {
      width: var(--circle-container-diameter);
      height: var(--circle-container-diameter);
      background-color: rgba(255, 255, 255, 0.1);
      position: absolute;
      left: var(--circle-container-offset);
      top: var(--circle-container-offset);
      border-radius: var(--container-radius);
      display: flex;
      align-items: center;
      justify-content: center;
      transition: var(--circle-transition);
      pointer-events: none;
    }

    .theme-switch__sun-moon-container {
      width: var(--sun-moon-diameter);
      height: var(--sun-moon-diameter);
      background-color: var(--sun-bg);
      border-radius: var(--container-radius);
      position: relative;
      z-index: 2;
      overflow: hidden;
      box-shadow:
        0.062em 0.062em 0.062em 0em rgba(254, 255, 239, 0.61) inset,
        0em -0.062em 0.062em 0em #a1872a inset;
      transition: var(--transition);
    }

    .theme-switch__moon {
      transform: translateX(100%);
      width: 100%;
      height: 100%;
      background-color: var(--moon-bg);
      border-radius: inherit;
      box-shadow:
        0.062em 0.062em 0.062em 0em rgba(254, 255, 239, 0.61) inset,
        0em -0.062em 0.062em 0em #969696 inset;
      transition: var(--transition);
      position: relative;
    }

    .theme-switch__spot {
      position: absolute;
      top: 0.75em;
      left: 0.312em;
      width: 0.75em;
      height: 0.75em;
      border-radius: var(--container-radius);
      background-color: var(--spot-color);
    }

    .theme-switch__spot:nth-of-type(2) {
      width: 0.375em;
      height: 0.375em;
      top: 0.937em;
      left: 1.375em;
    }

    .theme-switch__spot:nth-last-of-type(3) {
      width: 0.25em;
      height: 0.25em;
      top: 0.312em;
      left: 0.812em;
    }

    .theme-switch__clouds {
      width: 1.25em;
      height: 1.25em;
      background-color: var(--clouds-color);
      border-radius: var(--container-radius);
      position: absolute;
      bottom: -0.625em;
      left: 0.312em;
      box-shadow:
        0.937em 0.312em var(--clouds-color),
        -0.312em -0.312em var(--back-clouds-color),
        1.437em 0.375em var(--clouds-color),
        0.5em -0.125em var(--back-clouds-color),
        2.187em 0 var(--clouds-color),
        1.25em -0.062em var(--back-clouds-color);
      transition: 0.5s cubic-bezier(0, -0.02, 0.4, 1.25);
    }

    .theme-switch__stars-container {
      position: absolute;
      color: var(--stars-color);
      top: -100%;
      left: 0.312em;
      width: 2.75em;
      height: auto;
      transition: var(--transition);
    }

    /* Switch actions */
    .theme-switch__checkbox:checked + .theme-switch__container {
      background-color: var(--container-night-bg);
    }

    .theme-switch__checkbox:checked
      + .theme-switch__container
      .theme-switch__circle-container {
      left: calc(
        100% - var(--circle-container-offset) - var(--circle-container-diameter)
      );
    }

    .theme-switch__checkbox:checked
      + .theme-switch__container
      .theme-switch__moon {
      transform: translate(0);
    }

    .theme-switch__checkbox:checked
      + .theme-switch__container
      .theme-switch__clouds {
      bottom: -4.062em;
    }

    .theme-switch__checkbox:checked
      + .theme-switch__container
      .theme-switch__stars-container {
      top: 50%;
      transform: translateY(-50%);
    }

    /* Responsive */
    @media (max-width: 768px) {
      .nav-list {
        gap: 1.5rem;
        flex-wrap: wrap;
      }

      .nav-link {
        font-size: 0.9rem;
      }

      .nav-controls {
        gap: 1rem;
      }

      .lang-switch {
        transform: scale(0.9);
      }

      .theme-switch {
        transform: scale(0.9);
      }
    }

    @media (max-width: 480px) {
      .nav-controls {
        gap: 0.5rem;
      }

      .lang-switch {
        transform: scale(0.8);
      }

      .theme-switch {
        transform: scale(0.8);
      }
    }
  </style>
</header>
