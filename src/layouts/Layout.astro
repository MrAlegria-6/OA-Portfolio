---
interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "Portfolio de Oscar Alegría - Full-Stack Developer",
} = Astro.props;
import "@fontsource/k2d";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="content">
      <slot />
    </div>
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html,
  body {
    max-width: 100vw;
    overflow-x: hidden;
    scroll-behavior: auto !important;
  }

  :root {
    --bg: whitesmoke;
    --text: #1f1f1f;
    --accent: #d97706;
  }

  .dark {
    --bg: #0f172a;
    --text: #f1f5f9;
    --accent: #fbbf24;
  }

  body {
    font-family: "K2D", sans-serif;
    background: var(--bg);
    color: var(--text);
    min-height: 100vh;
    transition:
      background 0.3s ease,
      color 0.3s ease;
    padding-top: 100px; /* Agregué padding para compensar el header fijo */
    overflow-y: hidden;
    overflow-x: hidden;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }
</style>
